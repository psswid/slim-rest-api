{% extends 'templates/app.twig' %}

{% block content %}
    <h2 class="page-header">Specialists list</h2>
    <table class="table">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Email</th>
            <th scope="col">Password</th>
            <th scope="col">First name</th>
            <th scope="col">Last name</th>
            <th scope="col">Specialization</th>
            <th scope="col">Street</th>
            <th scope="col">City</th>
            <th scope="col">State</th>
            <th scope="col">Zip</th>
            <th scope="col">Phone</th>
            <th scope="col">Creation date</th>
        </tr>
        </thead>
        <tbody>
        {% for specialist in specialists %}
        <tr>
            <th>{{ specialist.id }}</th>
            <td>{{ specialist.email }}</td>
            <td>{{ specialist.password }}</td>
            <td>{{ specialist.first_name }}</td>
            <td>{{ specialist.last_name }}</td>
            <td>{{ specialist.specialization }}</td>
            <td>{{ specialist.street }}</td>
            <td>{{ specialist.city }}</td>
            <td>{{ specialist.state }}</td>
            <td>{{ specialist.zip }}</td>
            <td>{{ specialist.phone }}</td>
            <td>{{ specialist.created_at|date('Y-m-d') }}</td>

            <td>
                <a href="/specialist/details/{{ specialist.id }}" class="btn btn-success">Details</a>
                <a href="/specialist/edit/{{ specialist.id }}" class="btn btn-default">Edit</a>
                <a href="/specialist/delete/{{ specialist.id }}" class="btn btn-danger">Delete</a>
            </td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
