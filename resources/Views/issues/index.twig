{% extends 'templates/app.twig' %}

{% block content %}
    <h2 class="page-header">Latest issues</h2>
    <table class="table">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Title</th>
            <th scope="col">Category</th>
            <th scope="col">Description</th>
            <th scope="col">Creation date</th>
            <th scope="col">Customer ID</th>
            <th scope="col">Specialists ID</th>
            <th scope="col">Issue picked</th>
            <th scope="col">Issue solved</th>
        </tr>
        </thead>
        <tbody>
        {% for issue in issues %}
        <tr>
            <th>{{ issue.id }}</th>
            <td>{{ issue.title }}</td>
            <td>{{ issue.category }}</td>
            <td>{{ issue.description }}</td>
            <td>{{ issue.created_at|date('Y-m-d') }}</td>
            <td>{{ issue.customer_id }}</td>
            <td>{{ issue.specialist_id }}</td>
            <td>{{ issue.is_picked }}</td>
            <td>{{ issue.is_solved }}</td>

            <td>
                <a href="/issue/details/{{ issue.id }}" class="btn btn-success">Details</a>
                <a href="/issue/edit/{{ issue.id }}" class="btn btn-default">Edit</a>
                <a href="/issue/delete/{{ issue.id }}" class="btn btn-danger">Delete</a>
            </td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
